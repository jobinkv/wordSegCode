PROJECT(githublbp)
SET(CMAKE_BUILD_TYPE Release)
CMAKE_MINIMUM_REQUIRED( VERSION 2.6 )
FIND_PACKAGE( OpenCV REQUIRED )
ADD_DEFINITIONS(-D CPU_ONLY)
LINK_DIRECTORIES(/usr/lib/x86_64-linux-gnu /home/jobin/Documents/caffe-master/build/lib)
INCLUDE_DIRECTORIES(/home/jobin/Documents/caffe-master/include /home/jobin/Documents/caffe-master/distribute/include)
ADD_EXECUTABLE(docSeg main.cpp Classifier.cpp  FeatureComputer.cpp  HandDetector.cpp  LcBasic.cpp GCoptimization.cpp LinkedBlockList.cpp)
TARGET_LINK_LIBRARIES(docSeg ${OpenCV_LIBS} vl caffe glog protobuf)
